.Navigation_bar {
  background-color: #ffe4c4;
}
.Navigation_bar .person_image {
  margin-top: 100rpx;
  margin-left: 20rpx;
  width: 70rpx;
  height: 70rpx;
}
.scroll_index {
  background: #ffe4c4;
  height: 100vh;
}
.scroll_index .swiper-container {
  margin: 0 auto;
}
.scroll_index .swiper-image {
  width: 100%;
  height: 100%;
}
.scroll_index .function-module {
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}
.scroll_index .function-module .Receiving_orders,
.scroll_index .function-module .place_an_order {
  display: block;
  justify-content: center;
}
.scroll_index .function-module .Receiving_orders .Receiving_orders_image,
.scroll_index .function-module .Receiving_orders .place_an_order_image,
.scroll_index .function-module .place_an_order .Receiving_orders_image,
.scroll_index .function-module .place_an_order .place_an_order_image {
  width: 150rpx;
  height: 150rpx;
}
.scroll_index .function-module .Receiving_orders .Receiving_orders_text,
.scroll_index .function-module .Receiving_orders .place_an_order_text,
.scroll_index .function-module .place_an_order .Receiving_orders_text,
.scroll_index .function-module .place_an_order .place_an_order_text {
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  color: black;
}
.scroll_index .function-module .Receiving_orders {
  margin-left: 100rpx;
}
.scroll_index .function-module .place_an_order {
  margin-right: 100rpx;
}
.scroll_index .function-module .place_an_order_image {
  opacity: 0.7;
}